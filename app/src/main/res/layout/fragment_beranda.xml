<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    tools:context=".BerandaFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/vertical_middle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5"/>
            <TextView
                android:id="@+id/txt_to_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="What do you want to do now, User ?"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_bold"
                android:textSize="14sp"
                tools:ignore="MissingConstraints"/>
            <androidx.cardview.widget.CardView
                android:id="@+id/icon_movie"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:cardCornerRadius="50dp"
                app:cardElevation="0.081dp"
                app:layout_constraintTop_toBottomOf="@id/txt_to_user"
                android:layout_marginTop="8dp"
                tools:ignore="MissingConstraints">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/pict_icon_movie"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/icon_movie"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/icon_food"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:cardCornerRadius="50dp"
                app:cardElevation="0.081dp"
                app:layout_constraintTop_toBottomOf="@id/txt_to_user"
                app:layout_constraintStart_toEndOf="@id/icon_movie"
                android:layout_marginTop="8dp"
                android:layout_marginStart="12dp"
                tools:ignore="MissingConstraints">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/pict_icon_food"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/icon_food"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/icon_cinema"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:cardCornerRadius="50dp"
                app:cardElevation="0.081dp"
                app:layout_constraintTop_toBottomOf="@id/txt_to_user"
                app:layout_constraintStart_toEndOf="@id/icon_food"
                android:layout_marginTop="8dp"
                android:layout_marginStart="12dp"
                tools:ignore="MissingConstraints">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/pict_icon_cinema"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/icon_cinema"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/icon_private"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:cardCornerRadius="50dp"
                app:cardElevation="0.081dp"
                app:layout_constraintTop_toBottomOf="@id/txt_to_user"
                app:layout_constraintStart_toEndOf="@id/icon_cinema"
                android:layout_marginTop="8dp"
                android:layout_marginStart="12dp"
                tools:ignore="MissingConstraints">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/pict_icon_private"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/icon_private"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/txt_movie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Movie"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_regular"
                app:layout_constraintTop_toBottomOf="@id/icon_movie"
                app:layout_constraintEnd_toEndOf="@id/icon_movie"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/txt_food"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Food"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_regular"
                app:layout_constraintTop_toBottomOf="@id/icon_food"
                app:layout_constraintEnd_toEndOf="@id/icon_food"
                app:layout_constraintStart_toStartOf="@id/icon_food"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/txt_cinema"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cinema"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_regular"
                app:layout_constraintTop_toBottomOf="@id/icon_cinema"
                app:layout_constraintEnd_toEndOf="@id/icon_cinema"
                app:layout_constraintStart_toStartOf="@id/icon_cinema"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/txt_private"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Private Booking"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:fontFamily="@font/poppins_regular"
                app:layout_constraintTop_toBottomOf="@id/icon_private"
                app:layout_constraintEnd_toEndOf="@id/icon_private"
                app:layout_constraintStart_toStartOf="@id/icon_private"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/txt_hottest_movie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OUR HOTTEST MOVIE"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_bold"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_movie"
                android:layout_marginTop="32dp"
                tools:ignore="MissingConstraints"/>
            <LinearLayout
                android:id="@+id/see_more"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/vertical_middle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_movie"
                android:layout_marginTop="32dp"
                android:gravity="end"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txt_see_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textColor="@color/green_dark"
                    android:fontFamily="@font/poppins_bold"
                    android:textSize="14sp"
                    android:text="see more"/>
                <ImageView
                    android:id="@+id/btn_see_more"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/more"
                    android:layout_gravity="center"
                    android:layout_marginStart="4dp"/>
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_film"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:listitem="@layout/item_movie"
                app:layout_constraintTop_toBottomOf="@id/txt_hottest_movie"
                tools:itemCount="6"
                tools:ignore="MissingConstraints" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</FrameLayout>